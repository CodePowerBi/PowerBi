Month = 
-- Para obtener el valor del primer mes del último cuatrimestre completo que tenga datos
VAR FechaActual = MAX('tables_des_salida_intragrupo_2'[process_date])
VAR MesActual = MONTH(FechaActual)
VAR AnioActual = YEAR(FechaActual)
VAR TrimestreActual = INT((MesActual - 1) / 3) + 1
VAR AnioTrimestreAnterior = IF(TrimestreActual = 1, AnioActual - 1, AnioActual)
VAR TrimestreAnterior = IF(TrimestreActual = 1, 4, TrimestreActual - 1)
VAR UltimoMes =
    SWITCH(
        TrimestreAnterior,
        1, 3,   -- Para Q1: el último mes es marzo
        2, 6,   -- Para Q2: el último mes es junio
        3, 9,   -- Para Q3: el último mes es septiembre
        4, 12   -- Para Q4: el último mes es diciembre
    )
VAR FechaUltimoMes = DATE(AnioTrimestreAnterior, UltimoMes, 1)
VAR Resultado =
    CALCULATE(
        MAX('tables_des_salida_intragrupo_2'[perc_exposure]),
        'tables_des_salida_intragrupo_2'[process_date] = FechaUltimoMes
    )
RETURN
    IF(ISBLANK(Resultado), 0, ABS(Resultado))
