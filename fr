ValorTopMesNivel123 = 
VAR TablaFiltrada =
    FILTER(
        ALL(vrif_vw),
        vrif_vw[level] IN {1, 2, 3}
    )

VAR SumaPorMes =
    SUMMARIZE(
        TablaFiltrada,
        "Anio", YEAR(vrif_vw[fecha]),
        "Mes", MONTH(vrif_vw[fecha]),
        "TotalMes", SUM(vrif_vw[valor])
    )

VAR TopMes =
    TOPN(1, SumaPorMes, [TotalMes], DESC)

VAR AnioTop = SELECTCOLUMNS(TopMes, "Anio")
VAR MesTop  = SELECTCOLUMNS(TopMes, "Mes")

VAR ValorDelTopMes =
    CALCULATE(
        SUM(vrif_vw[valor]),
        vrif_vw[level] IN {1, 2, 3},
        YEAR(vrif_vw[fecha]) = AnioTop,
        MONTH(vrif_vw[fecha]) = MesTop
    )

RETURN
ValorDelTopMes
