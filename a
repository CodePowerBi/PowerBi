SELECT
    id_unit,
    DATE_TRUNC('month', fecha)::date AS mes,
    ROUND(SUM(valor_metrica)::numeric, 2) AS sum_valor_metrica
FROM tablones_des_salida_buffer_hqla_vw
WHERE fecha >= '2025-03-01' 
  AND fecha < '2025-04-01'
GROUP BY
    id_unit,
    DATE_TRUNC('month', fecha)::date
ORDER BY
    id_unit,
    mes;
