PD_constante :=
VAR _Year =
    YEAR( MAX( 'VINTAGES_DT'[origination_date] ) )   -- año del punto en el gráfico
RETURN
MAXX(
    FILTER(
        ALL( 'VINTAGES_DT'[origination_date] ),      -- quita el filtro de mes
        YEAR( 'VINTAGES_DT'[origination_date] ) = _Year
    ),
    -- aquí usamos EXACTAMENTE el mismo cálculo de PD
    DIVIDE(
        CALCULATE(
            SUM( 'VINTAGES_DT'[pd_times_ead] ),
            'VINTAGES_DT'[time_in_books] = 3
        ),
        CALCULATE(
            SUM( 'VINTAGES_DT'[ead_ifrs9] ),
            'VINTAGES_DT'[time_in_books] = 3
        )
    ) / 100
)
