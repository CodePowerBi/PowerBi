CantidadTotalPasivo :=
VAR _mes   = 'Top10_mensual'[fecha]                    -- primer dÃ­a del mes en Top10
VAR _cpty  = 'Top10_mensual'[counterparty_name]
RETURN
CALCULATE (
    SUM ( 'tablones_des mrf_pasivo_neto_plantilla_67'[cantidad- Millones] ),
    KEEPFILTERS ( 'tablones_des mrf_pasivo_neto_plantilla_67'[counterparty_name] = _cpty ),
    KEEPFILTERS ( 'tablones_des mrf_pasivo_neto_plantilla_67'[effective_date] >= _mes ),
    KEEPFILTERS ( 'tablones_des mrf_pasivo_neto_plantilla_67'[effective_date] <= EOMONTH ( _mes, 0 ) )
)
