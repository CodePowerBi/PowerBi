LCR_12M_Chart :=
VAR MesAncla =
    SELECTEDVALUE ( Dates[MesAnioOrden] )        -- mes que eliges en el slicer

VAR MesActual =
    SELECTEDVALUE ( EjeMes_12M[MesAnioOrden] )   -- mes de cada barra del gráfico

VAR DentroVentana =
    NOT ISBLANK ( MesAncla ) &&
    NOT ISBLANK ( MesActual ) &&
    MesActual <= MesAncla &&
    MesActual > MesAncla - 12                    -- últimos 12 meses

RETURN
IF (
    NOT DentroVentana,
    BLANK(),
    CALCULATE (
        [LCR_Base],                              -- usa la medida base
        REMOVEFILTERS ( Dates ),                 -- quita el filtro del mes seleccionado
        TREATAS ( { MesActual }, Dates[MesAnioOrden] ) -- fija el mes concreto
    )
)
