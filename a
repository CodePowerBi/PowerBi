TablaDespivotada =
VAR BaseTable =
    ADDCOLUMNS (
        SELECTCOLUMNS (
            'tablones_des_mrf_comprobaciones_eba',
            "effective_date", 'tablones_des_mrf_comprobaciones_eba'[effective_date],
            "pais", 'tablones_des_mrf_comprobaciones_eba'[pais],
            "activos", 'tablones_des_mrf_comprobaciones_eba'[activos],
            "outflows", 'tablones_des_mrf_comprobaciones_eba'[outflows],
            "inflows", 'tablones_des_mrf_comprobaciones_eba'[inflows],
            "superavit", 'tablones_des_mrf_comprobaciones_eba'[superavit],
            "ratio", 'tablones_des_mrf_comprobaciones_eba'[ratio]
        )
    )
RETURN
    UNION (
        SELECTCOLUMNS ( BaseTable,
            "effective_date", [effective_date],
            "pais", [pais],
            "Metrica", "activos",
            "Valor", [activos]
        ),
        SELECTCOLUMNS ( BaseTable,
            "effective_date", [effective_date],
            "pais", [pais],
            "Metrica", "outflows",
            "Valor", [outflows]
        ),
        SELECTCOLUMNS ( BaseTable,
            "effective_date", [effective_date],
            "pais", [pais],
            "Metrica", "inflows",
            "Valor", [inflows]
        ),
        SELECTCOLUMNS ( BaseTable,
            "effective_date", [effective_date],
            "pais", [pais],
            "Metrica", "superavit",
            "Valor", [superavit]
        ),
        SELECTCOLUMNS ( BaseTable,
            "effective_date", [effective_date],
            "pais", [pais],
            "Metrica", "ratio",
            "Valor", [ratio]
        )
    )
