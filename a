A SLICER GRAFICO :=
VAR MesSlicerCodigo =
    SELECTEDVALUE ( MesSelector[MesAnioOrden] )
    -- Aquí leo el mes que yo tengo elegido en el slicer (MesSelector), en formato AAAAMM

VAR MesEjeCodigo =
    SELECTEDVALUE ( 'EjeMes_12M'[MesAnioOrden] )
    -- Aquí leo el mes concreto que está dibujando el gráfico en la leyenda/eje

VAR MesSlicerFecha =
    IF (
        NOT ISBLANK ( MesSlicerCodigo ),
        -- Si tengo un mes elegido en el slicer, lo convierto a una fecha real (1 de ese mes)
        DATE ( INT ( MesSlicerCodigo / 100 ), MOD ( MesSlicerCodigo, 100 ), 1 )
    )

VAR MesEjeFecha =
    IF (
        NOT ISBLANK ( MesEjeCodigo ),
        -- Hago lo mismo con el mes del eje
        DATE ( INT ( MesEjeCodigo / 100 ), MOD ( MesEjeCodigo, 100 ), 1 )
    )

VAR DentroVentana =
    -- Aquí compruebo si el mes del eje está dentro de los últimos 12 meses del mes seleccionado
    NOT ISBLANK ( MesSlicerFecha ) &&
    NOT ISBLANK ( MesEjeFecha ) &&
    MesEjeFecha <= MesSlicerFecha &&
    MesEjeFecha > EDATE ( MesSlicerFecha, -12 )

RETURN
IF (
    NOT DentroVentana,
    -- Si el mes está fuera de la ventana de 12M, no quiero pintar nada
    BLANK(),
    -- Si está dentro, calculo EXACTAMENTE el mismo importe que en EXPECTATIVA para ese mes
    CALCULATE (
        [Importe],      -- uso la misma suma que en EXPECTATIVA
        KEEPFILTERS (
            DATESBETWEEN (
                Dates[Date],
                MesEjeFecha,                -- desde el día 1 del mes del eje
                EOMONTH ( MesEjeFecha, 0 )  -- hasta el último día de ese mes
            )
        )
    )
)
