Color_Meses :=
VAR MaxYM = [MesMax_Slicer]
VAR Mes   = SELECTEDVALUE( 'Dates'[MesAnioOrden] )

VAR MaxYM_Minus3 =
    MAXYM - 3

VAR MaxYM_Minus6 =
    MaxYM - 6
RETURN
SWITCH(
    TRUE(),

    Mes = MaxYM,             "#808080",  -- gris para fecha mes actual
    Mes = MaxYM_Minus3,      "#B3B3B3",  -- gris m√°s claro para -3M
    Mes = MaxYM_Minus6,      "#C00000",  -- rojo para -6M

    "#D9D9D9"                -- color por defecto para el resto (gris hielo)
)
