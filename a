Amount_Month_Sum :=
VAR _mes   = 'Pag7_Top10_mensual'[fecha]                  -- primer dÃ­a del mes
VAR _cpty  = 'Pag7_Top10_mensual'[counterparty_name]
VAR _ini   = _mes
VAR _fin   = EOMONTH( _mes, 0 )
RETURN
CALCULATE (
    SUM ( 'tablones_des mrf_plantilla_67'[amount_received] ),
    FILTER (
        'tablones_des mrf_plantilla_67',
        'tablones_des mrf_plantilla_67'[counterparty_name] = _cpty
            && 'tablones_des mrf_plantilla_67'[effective_date] >= _ini
            && 'tablones_des mrf_plantilla_67'[effective_date] <= _fin
    )
)
