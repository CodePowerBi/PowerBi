Valor_3M_Antes :=
VAR FechaActual   = Fusion_Resumen[report_date]
VAR Fecha3M       = EDATE ( FechaActual, -3 )

VAR Anyo3M        = YEAR ( Fecha3M )
VAR Mes3M         = MONTH ( Fecha3M )

VAR DivisaActual  = Fusion_Resumen[divisa]
VAR PaisActual    = Fusion_Resumen[pais]
RETURN
CALCULATE (
    MAX ( Fusion_Resumen[valor] ),        -- o SUM si corresponde
    FILTER (
        ALL ( Fusion_Resumen ),
        YEAR ( Fusion_Resumen[report_date] ) = Anyo3M
            && MONTH ( Fusion_Resumen[report_date] ) = Mes3M
            && Fusion_Resumen[divisa] = DivisaActual
            && Fusion_Resumen[pais]   = PaisActual
    )
)
