CleanHighlights =
VAR txt = 'comment_js_vw'[comment_highlights]
VAR salto = UNICHAR(10)

// Si empieza por "Highlights ", lo quitamos
VAR sinHighlightsInicio =
    IF(
        LEFT(txt, 10) = "Highlights ",
        MID(txt, 11, LEN(txt) - 10),
        txt
    )

// Limpiar saltos de línea vacíos (por si acaso hay alguno)
VAR limpio =
    SUBSTITUTE(
        SUBSTITUTE(
            SUBSTITUTE(sinHighlightsInicio, salto & salto & salto, salto),
            salto & salto, salto
        ),
        salto & salto, salto
    )

RETURN limpio
