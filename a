TÃ­tulo_Position_Trim = 
VAR MesSeleccionadoTexto = 
    IF(
        HASONEVALUE(Dates[Trim]),
        VALUES(Dates[Trim]),
        BLANK()
    )
VAR FechaCorrespondiente = 
    CALCULATE(
        MIN(Dates[Date]),
        FILTER(Dates, Dates[Trim] = MesSeleccionadoTexto)
    )
RETURN
IF(
    NOT ISBLANK(MesSeleccionadoTexto),
    "Position " & FORMAT(FechaCorrespondiente, "MMM yyyy"),
    "Please select a month first"
)
