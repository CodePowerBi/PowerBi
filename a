ColorCategoria1 =
VAR Cat1 = SELECTEDVALUE('Tabla'[Categoria1])
VAR EsCategoria1 = NOT ISINSCOPE('Tabla'[Categoria2])   -- solo el nivel 1
RETURN
SWITCH(
    TRUE(),
    EsCategoria1 && Cat1 IN {
        "ASSETS",
        "LIABILITIES",
        "TOTAL ASSETS & LIABILITIES"
    }, "#C00000",   -- rojo
    "#000000"       -- negro
)
