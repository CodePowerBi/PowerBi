Título_Position_Menos_3Meses =
VAR MesSeleccionadoTexto =
    IF(
        HASONEVALUE(Dates[Trim]),
        VALUES(Dates[Trim]),
        BLANK()
    )
VAR FechaCorrespondiente =
    CALCULATE(
        MIN(Dates[Date]),
        FILTER(Dates, Dates[Trim] = MesSeleccionadoTexto)
    )
VAR FechaMenos3Meses = EDATE(FechaCorrespondiente, -3)
RETURN
IF(
    NOT ISBLANK(MesSeleccionadoTexto),
    "Position " & FORMAT(FechaMenos3Meses, "MMM''yy"),  -- Aquí está el formato ajustado
    "Please select a month first"
)
