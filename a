Level2_con_TOTAL :=
VAR Epig =
    SELECTEDVALUE ( 'Dicc_epigrafes_total'[Limpieza new] )
RETURN
IF (
    Epig = "TOTAL",
        -- Fila TOTAL: sumar SOLO estos 4 ep√≠grafes,
        -- respetando cualquier filtro de Assets/Liabilities,
        CALCULATE (
            [Level2],
            ALL ( 'Dicc_epigrafes_total'[Limpieza new] ),
            'Dicc_epigrafes_total'[Limpieza new] IN {
                "Central Banks",
                "Credit Institutions",
                "Customers",
                "Debt Instruments"
            }
        ),
        -- Filas normales
        [Level2]
)
