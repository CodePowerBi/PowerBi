Comentario_Full =
VAR salto = UNICHAR(10)

// --- HIGH ---
VAR High_txt =
    COALESCE ( 'comment_js_vw'[comment_highlights], "" )
VAR High_colapsado =
    SUBSTITUTE(
        SUBSTITUTE(
            SUBSTITUTE(
                SUBSTITUTE( High_txt, salto & salto & salto & salto, salto ),
                salto & salto & salto, salto
            ),
            salto & salto, salto
        ),
        salto & salto, salto
    )
VAR High_limpio =
    SUBSTITUTE ( High_colapsado, "Highlights", "" )

// --- EVE ---
VAR Eve_txt =
    COALESCE ( 'comment_js_vw'[comment_eve], "" )
VAR Eve_colapsado =
    SUBSTITUTE(
        SUBSTITUTE(
            SUBSTITUTE(
                SUBSTITUTE( Eve_txt, salto & salto & salto & salto, salto ),
                salto & salto & salto, salto
            ),
            salto & salto, salto
        ),
        salto & salto, salto
    )
VAR Eve_limpio =
    SUBSTITUTE ( Eve_colapsado, "Highlights", "" )

RETURN
    TRIM (
        High_limpio
            & IF ( High_limpio <> "" && Eve_limpio <> "", salto & salto, "" )
            & Eve_limpio
    )
