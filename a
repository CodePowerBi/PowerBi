Valor_Mes_MaxFecha = 
VAR FechaMax = 
    CALCULATE(
        MAX ( 'tablones_des_salida_buffer'[fecha] ),
        FILTER(
            ALL ( 'tablones_des_salida_buffer' ),
            'tablones_des_salida_buffer'[valor] <> 0
        )
    )
VAR FechaInicioMes = DATE( YEAR(FechaMax), MONTH(FechaMax), 1 )
VAR FechaFinMes    = EOMONTH( FechaInicioMes, 0 )

RETURN
CALCULATE(
    SUM( 'tablones_des_salida_buffer'[valor] ),
    'tablones_des_salida_buffer'[fecha] >= FechaInicioMes,
    'tablones_des_salida_buffer'[fecha] <= FechaFinMes
)
