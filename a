Comentario_Full =
VAR salto = UNICHAR(10)

// primero todos los high
VAR TodosHigh =
    CONCATENATEX (
        FILTER ( 'comment_js_vw', NOT ISEMPTY ( 'comment_js_vw'[comment_highlights] ) ),
        SUBSTITUTE(
            SUBSTITUTE(
                SUBSTITUTE(
                    SUBSTITUTE('comment_js_vw'[comment_highlights], salto & salto & salto & salto, salto),
                    salto & salto & salto, salto
                ),
                salto & salto, salto
            ),
            "Highlights", ""
        ),
        salto
    )

// despu√©s todos los eve
VAR TodosEve =
    CONCATENATEX (
        FILTER ( 'comment_js_vw', NOT ISEMPTY ( 'comment_js_vw'[comment_eve] ) ),
        SUBSTITUTE(
            SUBSTITUTE(
                SUBSTITUTE(
                    SUBSTITUTE('comment_js_vw'[comment_eve], salto & salto & salto & salto, salto),
                    salto & salto & salto, salto
                ),
                salto & salto, salto
            ),
            "Highlights", ""
        ),
        salto
    )

RETURN
    TodosHigh & salto & salto & TodosEve
