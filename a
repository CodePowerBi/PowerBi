Trim =
VAR Mes = MONTH(Dates[Date])
VAR Anyo = YEAR(Dates[Date])
VAR TextoBase =
    LOWER(
        FORMAT(Dates[Date], "mmm")
        & "-"
        & RIGHT(FORMAT(Dates[Date], "yy"), 2)
    )
RETURN
IF(
    Mes IN {3, 6, 9, 12},
    UPPER(LEFT(TextoBase, 1)) & MID(TextoBase, 2, LEN(TextoBase)),
    "-"
)
