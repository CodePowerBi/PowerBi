SLICER GRAFICO :=
VAR MesSlicerCodigo =
    SELECTEDVALUE ( Dates[MesAnioOrden] )           -- mes elegido en el slicer

VAR MesEjeCodigo =
    SELECTEDVALUE ( 'EjeMes_12M'[MesAnioOrden] )    -- mes que está pintando el eje/leyenda

VAR MesSlicerFecha =
    IF (
        NOT ISBLANK ( MesSlicerCodigo ),
        DATE ( INT ( MesSlicerCodigo / 100 ), MOD ( MesSlicerCodigo, 100 ), 1 )
    )

VAR MesEjeFecha =
    IF (
        NOT ISBLANK ( MesEjeCodigo ),
        DATE ( INT ( MesEjeCodigo / 100 ), MOD ( MesEjeCodigo, 100 ), 1 )
    )

-- ¿El mes del eje está dentro de la ventana de 12M hacia atrás desde el mes seleccionado?
VAR DentroVentana =
    NOT ISBLANK ( MesSlicerFecha ) &&
    NOT ISBLANK ( MesEjeFecha ) &&
    MesEjeFecha <= MesSlicerFecha &&
    MesEjeFecha > EDATE ( MesSlicerFecha, -12 )

RETURN
IF (
    NOT DentroVentana,
    BLANK (),
    CALCULATE (
        MAX ( fusion_vw[importe_libros] ),          -- o la medida que quieras usar
        FILTER (
            ALL ( fusion_vw ),
            fusion_vw[report_date] >= MesEjeFecha &&
            fusion_vw[report_date] <= EOMONTH ( MesEjeFecha, 0 ) + 1
        )
    )
)
