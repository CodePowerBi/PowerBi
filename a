Color_Subcategoria_PPT :=
VAR SubCat =
    SELECTEDVALUE ( dicc_metrica_back[subcategoria_ppt] )
RETURN
SWITCH (
    TRUE(),
    SubCat = "LIQUID ASSETS",   "#FF0000",   -- rojo
    SubCat = "CASH OUTFLOWS",   "#FF0000",
    SubCat = "CASH INFLOWS",    "#FF0000",
    SubCat = "LEVEL 1",         "#FF0000",
    BLANK()                     -- resto sin color / por defecto
)
