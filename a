Mostrar_Hasta_Rango_3M :=
VAR MaxYM =
    CALCULATE(
        [MesMax_Slicer],
        REMOVEFILTERS( Dicc_Epigrafes_Total ),          -- la tabla que usas en el eje (la del 999)
        REMOVEFILTERS( fusion_vw[id_epigrafe] )         -- por si el filtro entra vía relación al fact
    )
VAR MinYM = MaxYM - 3
VAR YM = SELECTEDVALUE( A_Dates[MesAnioOrden] )
RETURN
IF(
    NOT ISINSCOPE( A_Dates[Monthly] ),
    1,
    IF(
        NOT ISBLANK(MaxYM) &&
        NOT ISBLANK(YM) &&
        YM >= MinYM && YM <= MaxYM,
        1, 0
    )
)
