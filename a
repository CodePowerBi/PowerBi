A SLICER GRAFICO :=
VAR MesSlicerCodigo =
    SELECTEDVALUE ( MesSelector[MesAnioOrden] )
    -- Aquí leo el mes que yo he elegido en el slicer (MesSelector), en formato AAAAMM

VAR MesEjeCodigo =
    SELECTEDVALUE ( 'EjeMes_12M'[MesAnioOrden] )
    -- Aquí leo el mes que está pintando el gráfico ahora mismo en la leyenda/eje

VAR MesSlicerFecha =
    IF (
        NOT ISBLANK ( MesSlicerCodigo ),
        -- Si tengo un mes elegido en el slicer, lo convierto a una fecha real (1er día del mes)
        DATE ( INT ( MesSlicerCodigo / 100 ), MOD ( MesSlicerCodigo, 100 ), 1 )
    )

VAR MesEjeFecha =
    IF (
        NOT ISBLANK ( MesEjeCodigo ),
        -- Hago lo mismo con el mes del eje, para poder compararlo por rango
        DATE ( INT ( MesEjeCodigo / 100 ), MOD ( MesEjeCodigo, 100 ), 1 )
    )

VAR DentroVentana =
    -- Aquí compruebo si el mes del eje está dentro de los últimos 12 meses del mes seleccionado
    NOT ISBLANK ( MesSlicerFecha ) &&
    NOT ISBLANK ( MesEjeFecha ) &&
    MesEjeFecha <= MesSlicerFecha &&
    MesEjeFecha > EDATE ( MesSlicerFecha, -12 )

RETURN
IF (
    NOT DentroVentana,
    -- Si el mes del eje está fuera de la ventana de 12M, yo devuelvo BLANK para no pintar nada
    BLANK(),
    -- Si está dentro, calculo el mismo importe que vería en una tabla normal para ese mes
    CALCULATE (
        [Importe],                                  -- reutilizo mi medida base
        TREATAS ( { MesEjeCodigo }, Dates[MesAnioOrden] )
        -- Con TREATAS, fuerzo a que este mes del eje actúe como filtro sobre Dates[MesAnioOrden]
        -- De esta forma, el valor que devuelvo aquí es el mismo que Suma de importe_libros
        -- para ese mes concreto
    )
)
