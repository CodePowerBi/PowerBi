Carrying Amount_con_TOTAL :=
VAR Epig = SELECTEDVALUE( 'Dicc_epigrafes_total'[epigrafe_front] )
RETURN
IF(
    Epig = "TOTAL",
    -- TOTAL por cada MES (solo los 4 epígrafes)
    CALCULATE(
        COALESCE( SUM( fusion_vw[importe_libros] ), 0 ),
        'Dicc_epigrafes_total'[epigrafe_front] IN {
            "Central Banks",
            "Credit Institutions",
            "Customers",
            "Debt Instruments"
        }
    ),
    -- epígrafes normales
    COALESCE( SUM( fusion_vw[importe_libros] ), 0 )
)
