A. DIFERENCIA_PCT parte 2 :=
VAR Monthly_Diff = [A. DIFERENCIA MENSUAL (LCR)]
VAR Daily_Diff   = [A. DIFERENCIA DIARIA]
VAR Resta        = Daily_Diff - Monthly_Diff
RETURN
IF (
    NOT ISBLANK ( Monthly_Diff ) && Monthly_Diff <> 0,
    VAR Valor = Resta
    RETURN
        IF ( Valor > 0,
            "+" & FORMAT ( Valor, "0.00" ),   -- positivo → “+x.xx”
            FORMAT ( Valor, "0.00" )          -- cero o negativo → “x.xx”
        ),
    BLANK ()
)
