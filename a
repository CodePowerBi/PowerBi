dicc_metrica_ext =
UNION (
    // Copia de todas las filas del diccionario original
    SELECTCOLUMNS (
        dicc_metrica,
        "id", dicc_metrica[id],
        "txt_field_bbdd", dicc_metrica[txt_field_bbdd],
        "txt_period", dicc_metrica[txt_period],
        "txt_calculation", dicc_metrica[txt_calculation]
    ),
    // Métricas calculadas añadidas manualmente
    DATATABLE (
        "id", INTEGER,
        "txt_field_bbdd", STRING,
        "txt_period", STRING,
        "txt_calculation", STRING,
        {
            { 9001, "ncl_custom", "YTD", "Calculadas" },
            { 9002, "otra_metrica", "M", "Calculadas" }
        }
    )
)
