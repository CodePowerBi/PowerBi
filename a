    'tablones_des salida_buffer_hqla_vw mezcla'[metrica],             -- mismas claves
    'tablones_des salida_buffer_hqla_vw mezcla'[metrica],

    'tablones_des salida_buffer_hqla_vw mezcla'[pais],
    'tablones_des salida_buffer_hqla_vw mezcla'[pais],

