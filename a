ID_orden.Categoria1 = 
VAR id = TRIM( IF( ISBLANK([ID_orden]), "", "" & [ID_orden] ) )
VAR cat = TRIM( IF( ISBLANK([categoria1]), "", "" & [categoria1] ) )
RETURN
IF(
    id = "" && cat = "",
    BLANK(),
    IF(
        id = "",
        cat,
        IF(
            cat = "",
            id,
            id & "." & cat
        )
    )
)
