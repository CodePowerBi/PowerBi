TotalRatio_MesAnterior = 
VAR FechaActual = CALCULATE(
    MAX('tablones_des_vista_salida_daily_lcr_ddbb'[date]),
    ALL('tablones_des_vista_salida_daily_lcr_ddbb')
)
VAR MesActual = MONTH(FechaActual)
VAR AnioActual = YEAR(FechaActual)
VAR TrimestreActual = INT((MesActual - 1) / 3) + 1

VAR PrimerMesTrimestreActual = 
    SWITCH(
        TrimestreActual,
        1, 1,
        2, 4,
        3, 7,
        4, 10
    )

VAR MesAnterior = IF(PrimerMesTrimestreActual = 1, 12, PrimerMesTrimestreActual - 1)
VAR AnioMesAnterior = IF(PrimerMesTrimestreActual = 1, AnioActual - 1, AnioActual)

VAR FechaInicioMes = DATE(AnioMesAnterior, MesAnterior, 1)
VAR FechaFinMes = EOMONTH(FechaInicioMes, 0)

RETURN
IF(
    'tablones_des_vista_salida_daily_lcr_ddbb'[date] >= FechaInicioMes &&
    'tablones_des_vista_salida_daily_lcr_ddbb'[date] <= FechaFinMes,
    CALCULATE(
        SUM('tablones_des_vista_salida_daily_lcr_ddbb'[Ratio]),
        FILTER(
            'tablones_des_vista_salida_daily_lcr_ddbb',
            'tablones_des_vista_salida_daily_lcr_ddbb'[date] >= FechaInicioMes &&
            'tablones_des_vista_salida_daily_lcr_ddbb'[date] <= FechaFinMes
        )
    ),
    BLANK()
)


____________________


RatioRelativo_MesAnterior = 
DIVIDE(
    'tablones_des_vista_salida_daily_lcr_ddbb'[Ratio],
    'tablones_des_vista_salida_daily_lcr_ddbb'[TotalRatio_MesAnterior]
)


