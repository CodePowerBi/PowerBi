Month_LCR = 
--Para obtener el valor del ÚLTIMO mes del último trimestre completo que tenga datos, excluyendo el trimestre actual

VAR FechaActual = MAX('tablones_des salida_lcr_daily'[fecha])
VAR MesActual = MONTH(FechaActual)
VAR AnioActual = YEAR(FechaActual)
VAR TrimestreActual = INT((MesActual - 1) / 3) + 1
VAR AnioTrimestreAnterior = IF(TrimestreActual = 1, AnioActual - 1, AnioActual)
VAR TrimestreAnterior = IF(TrimestreActual = 1, 4, TrimestreActual - 1)

VAR UltimoMes = 
    SWITCH(
        TrimestreAnterior,
        1, 3,  // Q1: marzo
        2, 6,  // Q2: junio
        3, 9,  // Q3: septiembre
        4, 12  // Q4: diciembre
    )

VAR FechaUltimoMes = DATE(AnioTrimestreAnterior, UltimoMes, 1)

RETURN
FechaUltimoMes
